<Window x:Class="GettingReal_DanGaming.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilføj Produkt" Height="700" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Icon="/Images/LOGOSINGLE.png">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" 
               Source="/Images/DangamingLogo.png" 
               HorizontalAlignment="Left" 
               Height="50"
               Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Produktnavn *" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource WatermarkTextBoxStyle}" 
                         Tag="Indtast Produktnavn" 
                         Foreground="Gray"
                         IsEnabled="{Binding IsAvailable}"
                         Text="{Binding SelectedProduct.Name, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Mærke *" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource WatermarkTextBoxStyle}" 
                         Tag="Indtast Mærke" 
                         Foreground="Gray"
                         IsEnabled="{Binding IsAvailable}"
                         Text="{Binding SelectedProduct.Brand, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Pris *" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource WatermarkTextBoxStyle}" 
                         Tag="0.00" 
                         Foreground="Gray"
                         IsEnabled="{Binding IsAvailable}"
                         Text="{Binding SelectedProduct.Price, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Beskrivelse" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource WatermarkTextBoxStyle}" 
                         Tag="Indtast Produktbeskrivelse (Valgfri)" 
                         Foreground="Gray"
                         Height="50"
                         IsEnabled="{Binding IsAvailable}"
                         Text="{Binding SelectedProduct.Description, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Kategori *" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="category" 
                    IsEnabled="{Binding IsAvailable}" 
                    ItemsSource="{Binding CategoriesVM}" 
                    DisplayMemberPath="ProductType" 
                    SelectedValuePath="Id" 
                    SelectedValue="{Binding SelectedProduct.CategoryId}" SelectionChanged="category_SelectionChanged" 
                ></ComboBox>

                <TextBlock Text="Underkategori" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="subcategory" 
                    IsEnabled="{Binding IsAvailable}" 
                    ItemsSource="{Binding SubcategoriesVM}" 
                    DisplayMemberPath="Name" 
                    SelectedValuePath="Id" 
                    SelectedValue="{Binding SelectedProduct.SubcategoryId}" SelectionChanged="subcategory_SelectionChanged" 
                ></ComboBox>

                <TextBlock Text="Antal *" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource WatermarkTextBoxStyle}" 
                         Tag="0" 
                         Foreground="Gray"
                         IsEnabled="{Binding IsAvailable}"
                         Text="{Binding SelectedProduct.Quantity, UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Background="White">
                <Grid Margin="5">
                    <DataGrid 
                        Grid.Row="2" 
                        SelectionMode="Single"
                        BorderThickness="1"
                        BorderBrush="Black"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        x:Name="ProductDataGrid"
                        ItemsSource="{Binding ProductsVM}"
                        SelectedItem="{Binding SelectedProduct}">

                        <DataGrid.Resources>
                            <SolidColorBrush 
                                x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                    Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                Color="{DynamicResource {x:Static SystemColors.HighlightTextColorKey}}" />
                        </DataGrid.Resources>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produktnavn" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Mærke" Binding="{Binding Brand}" Width="*"/>
                            <DataGridTextColumn Header="Pris (Kr)" Binding="{Binding Price}" Width="80"/>
                            <DataGridTextColumn Header="Kategori" Binding="{Binding CategoryName, Mode=TwoWay}" Width="*"/>
                            <DataGridTextColumn Header="Underkategori" Binding="{Binding SubcategoryName}" Width="*"/>
                            <DataGridTextColumn Header="Antal" Binding="{Binding Quantity}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">

                <Button Content="Tilføj Produkt" 
                        Background="Gray" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Padding="15,10" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding AddProductCmd}"
                        CommandParameter="{Binding}"/>

                <Button Content="Slet" 
                        Background="#D32F2F" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Padding="15,10"
                        Margin="10,0,0,0" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding RemoveProductCmd}"
                        CommandParameter="{Binding}"/>
            </StackPanel>

            <Button Grid.Row="1"
                    Content="Færdig" 
                    HorizontalAlignment="Right"
                    Background="#388E3C" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Padding="15,10"
                    Margin="0,10,0,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding AddAllProductsCmd}"
                    CommandParameter="{Binding}"/>

        </Grid>
    </Grid>
</Window>