<Window x:Class="GettingReal_DanGaming.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilføj Produkt" Height="700" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Icon="/Images/LOGOSINGLE.png">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" 
               Source="/Images/DangamingLogo.png" 
               HorizontalAlignment="Left" 
               Height="50"
               Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Produktnavn *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast Produktnavn" Foreground="Gray"/>

                <TextBlock Text="Mærke *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast Mærke" Foreground="Gray"/>

                <TextBlock Text="Pris *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="0.00" Foreground="Gray"/>

                <TextBlock Text="Beskrivelse" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast produktbeskrivelse (valgfri)" Foreground="Gray" Height="80" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                <TextBlock Text="Kategori *" Style="{StaticResource LabelStyle}"/>
                <ComboBox>
                    <ComboBoxItem Content="Vælg Kategori" IsSelected="True" IsEnabled="False"/>
                </ComboBox>

                <TextBlock Text="Underkategori" Style="{StaticResource LabelStyle}"/>
                <ComboBox>
                    <ComboBoxItem Content="Vælg Underkategori" IsSelected="True" IsEnabled="False"/>
                </ComboBox>

                <TextBlock Text="Antal *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="0" Foreground="Gray"/>

                <Button Content="Tilføj Produkt" 
                        Background="Gray" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Padding="10" 
                        Margin="0,20,0,0"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Background="White">
                <Grid Margin="5">
                    <TextBlock Text="Gridbox indhold her" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

                <Button Content="Slet" 
                        Background="#D32F2F" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Færdig" 
                        Background="#388E3C" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</Window>