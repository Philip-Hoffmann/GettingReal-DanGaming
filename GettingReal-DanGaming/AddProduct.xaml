<Window x:Class="GettingReal_DanGaming.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Inventory Items" Height="700" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" 
               Source="/Images/DangamingLogo.png" 
               HorizontalAlignment="Left" 
               Height="50"
               Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Produkt Navn *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast produkt navn" Foreground="Gray"/>

                <TextBlock Text="Mærke *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast Mærke navn" Foreground="Gray"/>

                <TextBlock Text="Pris *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="0.00" Foreground="Gray"/>

                <TextBlock Text="Beskrivelse" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="Indtast produkt beskrivelse (valgfri)" Foreground="Gray" Height="80" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                <TextBlock Text="Kategori *" Style="{StaticResource LabelStyle}"/>
                <ComboBox>
                    <ComboBoxItem Content="Select category" IsSelected="True" IsEnabled="False"/>
                </ComboBox>

                <TextBlock Text="Quantity *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="0" Foreground="Gray"/>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Background="White">
            </Border>

        </Grid>
    </Grid>
</Window>
